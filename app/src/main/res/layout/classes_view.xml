<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/className"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:fontFamily="monospace"
        android:text="CM INFO0403" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/className"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_toEndOf="@+id/className"
        android:layout_toRightOf="@+id/className"
        android:text="8h00 - 10h00" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/className"
        android:layout_alignStart="@+id/className"
        android:layout_below="@+id/className"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="[salle] Salle
Amphi E 2-R05 (Moulin de la Housse (Sciences et STAPS))" />
</RelativeLayout>