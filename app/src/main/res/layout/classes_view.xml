<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/className"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/classes_margins"
            android:layout_marginStart="@dimen/classes_margins"
            android:layout_marginTop="@dimen/classes_margins"
            android:fontFamily="monospace"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_weight="0.8"
            android:textSize="@dimen/classes_classname_text_size"
            android:ellipsize="end"
            android:maxEms="8"
            android:maxLines="1"
            android:text="@string/default_classname" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/classes_margins"
            android:layout_marginEnd="@dimen/classes_margins"
            android:layout_marginRight="@dimen/classes_margins"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:textSize="@dimen/classes_text_size"
            android:layout_weight="0.2"
            android:text="@string/default_time"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/location"
        android:layout_marginTop="@dimen/classes_margins"
        android:layout_marginEnd="@dimen/classes_margins"
        android:layout_marginLeft="@dimen/classes_margins"
        android:layout_marginStart="@dimen/classes_margins"
        android:layout_marginRight="@dimen/classes_margins"
        android:layout_marginBottom="@dimen/classes_margins"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/classes_text_size"
        android:text="@string/default_location" />
</LinearLayout>