<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tagliaro.monclin.urca.NewEventActivity">

        <!--<android.support.design.widget.AppBarLayout-->
        <!--android:id="@+id/appBarLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:theme="@style/AppTheme.AppBarOverlay">-->

        <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--app:popupTheme="@style/AppTheme.PopupOverlay" />-->

        <!--</android.support.design.widget.AppBarLayout>-->

        <TextView
            android:id="@+id/startTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/classes_smaller_margins"
            android:layout_marginLeft="@dimen/classes_margins"
            android:layout_marginRight="@dimen/classes_smaller_margins"
            android:layout_marginStart="@dimen/classes_margins"
            android:layout_marginTop="@dimen/classes_center_to_textview"
            android:text="@string/startTime"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/startTimeEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/classes_margins"
            android:layout_marginLeft="@dimen/classes_smaller_margins"
            android:layout_marginRight="@dimen/classes_margins"
            android:layout_marginStart="@dimen/classes_smaller_margins"
            android:layout_marginTop="@dimen/classes_margins"
            android:hint="@string/example_starttime"
            android:inputType="datetime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/endTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/classes_smaller_margins"
            android:layout_marginLeft="@dimen/classes_margins"
            android:layout_marginRight="@dimen/classes_smaller_margins"
            android:layout_marginStart="@dimen/classes_margins"
            android:layout_marginTop="@dimen/classes_center_to_textview"
            android:text="@string/endTime"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/startTimeEdit" />

        <EditText
            android:id="@+id/endTimeEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/classes_margins"
            android:layout_marginLeft="@dimen/classes_smaller_margins"
            android:layout_marginRight="@dimen/classes_margins"
            android:layout_marginStart="@dimen/classes_smaller_margins"
            android:layout_marginTop="@dimen/classes_margins"
            android:hint="@string/example_endtime"
            android:inputType="datetime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/startTimeEdit" />

        <TextView
            android:id="@+id/groupTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/classes_smaller_margins"
            android:layout_marginLeft="@dimen/classes_margins"
            android:layout_marginRight="@dimen/classes_smaller_margins"
            android:layout_marginStart="@dimen/classes_margins"
            android:layout_marginTop="@dimen/classes_center_to_textview"
            android:text="@string/group"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endTimeEdit" />

        <EditText
            android:id="@+id/groupEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/classes_margins"
            android:layout_marginLeft="@dimen/classes_smaller_margins"
            android:layout_marginRight="@dimen/classes_margins"
            android:layout_marginStart="@dimen/classes_smaller_margins"
            android:layout_marginTop="@dimen/classes_margins"
            android:hint="@string/example_group"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/endTimeEdit" />

        <TextView
            android:id="@+id/teacherTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/classes_smaller_margins"
            android:layout_marginLeft="@dimen/classes_margins"
            android:layout_marginRight="@dimen/classes_smaller_margins"
            android:layout_marginStart="@dimen/classes_margins"
            android:layout_marginTop="@dimen/classes_center_to_textview"
            android:text="@string/teacher"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groupEdit" />

        <EditText
            android:id="@+id/teacherEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/classes_margins"
            android:layout_marginLeft="@dimen/classes_smaller_margins"
            android:layout_marginRight="@dimen/classes_margins"
            android:layout_marginStart="@dimen/classes_smaller_margins"
            android:layout_marginTop="@dimen/classes_margins"
            android:hint="@string/example_teacher"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/groupEdit" />

        <TextView
            android:id="@+id/classroomTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/classes_smaller_margins"
            android:layout_marginLeft="@dimen/classes_margins"
            android:layout_marginRight="@dimen/classes_smaller_margins"
            android:layout_marginStart="@dimen/classes_margins"
            android:layout_marginTop="@dimen/classes_center_to_textview"
            android:text="@string/classroom"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teacherEdit" />

        <EditText
            android:id="@+id/classroomEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/classes_margins"
            android:layout_marginLeft="@dimen/classes_smaller_margins"
            android:layout_marginRight="@dimen/classes_margins"
            android:layout_marginStart="@dimen/classes_smaller_margins"
            android:layout_marginTop="@dimen/classes_margins"
            android:hint="@string/example_classroom"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/teacherEdit" />

        <TextView
            android:id="@+id/notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/classes_smaller_margins"
            android:layout_marginLeft="@dimen/classes_margins"
            android:layout_marginRight="@dimen/classes_smaller_margins"
            android:layout_marginStart="@dimen/classes_margins"
            android:layout_marginTop="@dimen/classes_center_to_textview"
            android:textSize="20sp"
            android:text="@string/additional_notes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/classroomEdit" />

        <EditText
            android:id="@+id/notesEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notes" />

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/classes_smaller_margins"
            android:layout_marginRight="@dimen/classes_smaller_margins"
            android:layout_marginStart="@dimen/classes_margins"
            android:layout_marginLeft="@dimen/classes_margins"
            android:layout_marginTop="@dimen/classes_margins"
            android:text="@string/cancel"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notesEdit" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/classes_margins"
            android:layout_marginRight="@dimen/classes_margins"
            android:layout_marginStart="@dimen/classes_smaller_margins"
            android:layout_marginLeft="@dimen/classes_smaller_margins"
            android:layout_marginTop="@dimen/classes_margins"
            android:text="@string/add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/notesEdit" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
